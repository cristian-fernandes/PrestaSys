@model Unisul.PrestaSys.Web.Models.Prestacoes.PrestacaoViewModel

@{
    ViewData["Title"] = "Excluir Prestação de Contas";
}

<h1>Excluir Prestação de Contas</h1>

<h3>Tem certeza que deseja excluir esta Prestação de Contas?</h3>

<hr />

<div>
    <partial name="_PrestacaoDetailsPartial" for="@Model" />
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (!Model.ShouldLockPrestacao)
        {
            <span><input type="submit" value="Excluir Prestação" class="btn btn-danger" /> |</span>
        }
        else
        {
            <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="Prestação finalizada, não é possível excluí-la.">
                <input type="submit" value="Excluir Prestação" class="btn btn-danger disabled" disabled /> |
            </span>
        }
        <a asp-action="Print" asp-route-id="@Model.Id">Imprimir</a> |
        <a asp-action="Index">Voltar para a Lista</a>
    </form>
</div>
<partial name="_ModalPartial" for="@Model" />
