@model Unisul.PrestaSys.Web.Models.Prestacoes.PrestacaoViewModel

@{
    ViewData["Title"] = "Excluir Prestação de Contas";
}

<h1>Excluir Prestação de Contas</h1>

<h3>Tem certeza que deseja excluir esta Prestação de Contas?</h3>

<hr/>

<div>
    <dl class="row">
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Titulo):
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Tipo):
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Tipo.Tipo)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Status):
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Status.Status)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Data):
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Justificativa):
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Justificativa)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Emitente):
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(modelItem => modelItem.Emitente.Nome) @Html.DisplayFor(modelItem => modelItem.Emitente.Sobrenome)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Aprovador):
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(modelItem => modelItem.Aprovador.Nome) @Html.DisplayFor(modelItem => modelItem.Aprovador.Sobrenome)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.AprovadorFinanceiro):
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(modelItem => modelItem.AprovadorFinanceiro.Nome) @Html.DisplayFor(modelItem => modelItem.AprovadorFinanceiro.Sobrenome)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Valor):
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.ImagemComprovante):
        </dt>
        <dd class="col-sm-8">
            @if (Model.ImagemComprovanteSrc != null)
            {
                <a class="btn btn-primary" data-target="#modalIMG" data-toggle="modal" href="#">Visualizar Imagem</a>
            }
            else
            {
                <em>Imagem não Enviada</em>
            }
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        @if (!Model.ShouldLockPrestacao)
        {
            <span><input type="submit" value="Excluir Prestação" class="btn btn-danger"/> |</span>
        }
        else
        {
            <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="Prestação finalizada, não é possível excluí-la.">
                <input type="submit" value="Excluir Prestação" class="btn btn-danger disabled" disabled /> |
            </span>
        }
        <a asp-action="Print" asp-route-id="@Model.Id">Imprimir</a> |
        <a asp-action="Index">Voltar para a Lista</a>
    </form>
</div>
<div aria-hidden="true" aria-labelledby="myModalLabel" class="modal fade" id="modalIMG" role="dialog" tabindex="-1">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-body mb-0 p-0">
                <img id="imgComprovante" src="@Model.ImagemComprovanteSrc" alt="Comprovante">
            </div>
            <div class="modal-footer">
                <div>
                    <a href="javascript:Download();">Download</a>
                </div>
                <button class="btn btn-outline-primary ml-4 text-center" data-dismiss="modal" type="button">Fechar</button>
            </div>
        </div>
    </div>
</div>
