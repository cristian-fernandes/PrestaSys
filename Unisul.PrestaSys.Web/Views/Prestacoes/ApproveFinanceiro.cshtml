@model Unisul.PrestaSys.Web.Models.Prestacoes.PrestacaoViewModel

@{
    ViewData["Title"] = "Aprovar Financeiramente Prestação de Contas";
}

<h1>Aprovar Financeiramente Prestação de Contas</h1>

<h3>Tem certeza que deseja aprovar esta Prestação de Contas Financeiramente?</h3>

<hr />

<div>
    <partial name="_PrestacaoDetailsPartial" for="@Model" />
    <form asp-action="ApproveFinanceiro">
        <label asp-for="JustificativaAprovacaoFinanceira" class="control-label"></label>
        <textarea rows="10" asp-for="JustificativaAprovacaoFinanceira" class="form-control"></textarea>
        <span asp-validation-for="JustificativaAprovacaoFinanceira" class="text-danger"></span>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Aprovar Prestação" class="btn btn-success" /> |
        <a asp-action="Print" asp-route-id="@Model.Id">Imprimir</a> |
        <a asp-action="PrestacoesParaAprovarFinanceiro">Voltar para a Lista</a>
    </form>
</div>
<partial name="_ModalPartial" for="@Model" />
