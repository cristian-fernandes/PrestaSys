@model Unisul.PrestaSys.Web.Models.Usuarios.UsuarioViewModel

@{
    ViewData["Title"] = "Excluir Usuário";
}

<h1>Excluir Usuário</h1>

<h3>Tem certeza de que deseja excluir este usuário?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sobrenome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sobrenome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Senha)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Senha)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlagGerente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlagGerente)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FlagGerenteFinanceiro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlagGerenteFinanceiro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gerente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.Gerente.Nome) @Html.DisplayFor(modelItem => modelItem.Gerente.Sobrenome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GerenteFinanceiro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => modelItem.GerenteFinanceiro.Nome) @Html.DisplayFor(modelItem => modelItem.GerenteFinanceiro.Sobrenome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        @if (!Model.ShouldDisableDeleteButton)
        {
            <span><input type="submit" value="Excluir Usuário" class="btn btn-danger" /> | </span>
        }
        else
        {
            <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="Usuário não pode ser deletado porque tem prestações para aprovar.">
                <input type="submit" value="Excluir Usuário" class="btn btn-danger disabled" disabled /> |
            </span>
        }
        <a asp-action="Index">Voltar para a Lista</a>
    </form>
</div>
