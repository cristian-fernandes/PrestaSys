@model IEnumerable<Repositorio.Models.Database.Usuario>

@{
    ViewData["Title"] = "Lista de Usuários";
}

<h1>Lista de Usuários</h1>

<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">Criar Novo Usuário</a>
</p>


<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <!--th>
            @Html.DisplayNameFor(model => model.FlagGerente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlagGerenteFinanceiro)
            </th-->
            <th>

            @Html.DisplayNameFor(model => model.Gerente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GerenteFinanceiro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <!--td>
                @Html.DisplayFor(modelItem => item.FlagGerente)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlagGerenteFinanceiro)
                </td-->
                <td>

                @Html.DisplayFor(modelItem => item.Gerente.Nome) @Html.DisplayFor(modelItem => item.Gerente.Sobrenome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GerenteFinanceiro.Nome) @Html.DisplayFor(modelItem => item.GerenteFinanceiro.Sobrenome)
                </td>
                <td style="text-align:center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<paging class-paging-control="pagination float-right" total-records="@ViewBag.TotalRecords" page-no="@ViewBag.PageNumber" page-size="8"></paging>
